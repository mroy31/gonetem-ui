{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "es2022",
    "lib": ["DOM", "es2021"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES2021",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "types/*",
    "src/**/*"
  ]
}
